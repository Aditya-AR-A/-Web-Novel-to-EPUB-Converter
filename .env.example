# Storage Backend Configuration
# Options: "s3", "google_drive", "local"
STORAGE_BACKEND=local

# AWS S3 Configuration (required if STORAGE_BACKEND=s3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# Google Drive Configuration (required if STORAGE_BACKEND=google_drive)
# Option 1: Provide JSON string directly
# GOOGLE_SERVICE_ACCOUNT_JSO

# Option 2: OR provide path to JSON file
GOOGLE_SERVICE_ACCOUNT_FILE=./service-account.json

# Optional: Specific folder ID to store files
GOOGLE_DRIVE_FOLDER_ID=

# Optional: User email for domain-wide delegation
GOOGLE_IMPERSONATED_USER=

# Database Configuration
# For PostgreSQL (Neon): postgresql://user:password@host/dbname?sslmode=require
# For SQLite (default): sqlite:///./data/epubs.db
DATABASE_URL=sqlite:///./data/epubs.db

# Local Storage Configuration (used when STORAGE_BACKEND=local)
LOCAL_STORAGE_PATH=books

# S3 Presigned URL Expiration (in seconds)
S3_PRESIGN_EXPIRATION=3600
